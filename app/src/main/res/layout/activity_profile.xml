<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ProfileActivity">


            <android.support.constraint.ConstraintLayout
                android:id="@+id/conslay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </android.support.constraint.ConstraintLayout>
            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="175dp"
                android:id="@+id/progress_bar"/>
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="57dp"
                android:layout_height="70dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="300dp"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/vipbatch" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/conslay1"
                android:id="@+id/layProfileSection"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/Tusername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Radika Roi"
                        android:textColor="@color/colorBlack"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                         />

                    <ImageView
                        android:id="@+id/Ionline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_gravity="center"
                        android:visibility="invisible"
                        app:layout_constraintStart_toEndOf="@+id/Tusername"
                        app:srcCompat="@android:drawable/presence_online" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/Tlookingfor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Looking for Serious Relationship"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/textView8" />
                    <TextView
                        android:id="@+id/Tgender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="(venus)"
                        android:textSize="14sp"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/Tabout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="9dp"
                    android:text="@string/aboutme"
                    android:textSize="14sp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/numberSection"
                android:layout_below="@id/layProfileSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/B1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/box_style_one"
                        android:text="@string/_0"
                        android:textAllCaps="false"
                         />

                    <Button
                        android:id="@+id/B2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/box_style_one"
                        android:text="@string/_0"
                         />

                    <Button
                        android:id="@+id/B3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/box_style_one"
                        android:text="@string/_0"
                       />

                    <Button
                        android:id="@+id/B4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/box_style_one"
                        android:text="@string/_0"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/BT1"
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="XP level"
                         />

                    <TextView
                        android:id="@+id/BT2"
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Posts"
                         />

                    <TextView
                        android:id="@+id/BT3"
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Following"
                       />

                    <TextView
                        android:id="@+id/BT4"
                        android:layout_width="89dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Followers"
                        />

                </LinearLayout>
            </LinearLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="1dp"
                android:layout_below="@id/numberSection"
                >

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="grid"
                    android:icon="@drawable/ic_gridimage_dark" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="single"
                    android:icon="@drawable/ic_singleimage_dark" />
            </android.support.design.widget.TabLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_below="@id/tabLayout"
                android:id="@+id/recylerview_postgrids"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:visibility="gone"
                android:layout_marginBottom="50dp"
                android:layout_below="@id/tabLayout"
                android:id="@+id/recylerview_postsingle"/>
            <!--<GridView-->
                <!--android:id="@+id/gridView"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="400dp"-->
                <!--android:layout_below="@id/tabLayout4"-->
                <!--android:background="#F5F4EC"-->
                <!--android:numColumns="3"-->
                <!--android:verticalSpacing="5dp"-->
                <!--android:horizontalSpacing="5dp"-->
                <!--android:gravity="center" />-->




        </RelativeLayout>
    </ScrollView>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/close"
                android:layout_centerVertical="true"
                android:src="@drawable/left_arrow"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:visibility="invisible"
        android:id="@+id/layBottomNav"
        android:background="@color/colorMyWhite"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:src="@drawable/ic_dropdown_dark"/>
        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:textSize="13sp"
            android:background="@color/colorWhite"
            android:text="C-check "
            android:tag="c_check"
            android:paddingStart="8dp"
            android:paddingEnd="10dp"
            android:drawableRight="@drawable/c_check"
            android:id="@+id/btncheckout"
            android:textAllCaps="false" />

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:id="@+id/btnfollow"
            android:background="@color/colorWhite"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:textSize="13sp"
            android:tag="follow"
            android:drawableLeft="@drawable/add_user"
            android:text="Follow"
            android:textAllCaps="false" />


        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:id="@+id/btnmessage"
            android:background="@color/colorWhite"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:tag="message"
            android:textSize="13sp"
            android:drawableLeft="@drawable/write_msg"
            android:text="Mesage"
            android:visibility="gone"
            android:textAllCaps="false" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/option"
            android:visibility="invisible"
            android:src="@drawable/ic_dropdown_dark"/>
    </LinearLayout>
</RelativeLayout>
